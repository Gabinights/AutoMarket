@model List<AutoMarket.Models.ViewModels.Carros.ListCarroViewModel>
@{
    ViewData["Title"] = "Os Meus Carros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="h3">Os Meus Carros</h1>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("Create", "Carros", new { area = "Vendedores" })" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Criar Novo Carro
            </a>
        </div>
    </div>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-light">
                    <tr>
                        <th>Imagem</th>
                        <th>Título</th>
                        <th>Marca/Modelo</th>
                        <th>Preço</th>
                        <th>KM</th>
                        <th>Ano</th>
                        <th>Estado</th>
                        <th>Publicado</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var carro in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(carro.ImagemPrincipal))
                                {
                                    <img src="/images/cars/@carro.ImagemPrincipal" alt="@carro.Titulo" style="width: 60px; height: 60px; object-fit: cover; border-radius: 4px;" />
                                }
                                else
                                {
                                    <div style="width: 60px; height: 60px; background: #e0e0e0; border-radius: 4px; display: flex; align-items: center; justify-content: center; font-size: 0.8rem; color: #999;">
                                        Sem imagem
                                    </div>
                                }
                            </td>
                            <td>
                                <strong>@carro.Titulo</strong>
                            </td>
                            <td>
                                @carro.Marca @carro.Modelo
                            </td>
                            <td>
                                <span class="text-primary fw-bold">€@carro.Preco.ToString("F2")</span>
                            </td>
                            <td>
                                @carro.Km.ToString("N0") km
                            </td>
                            <td>
                                @carro.Ano
                            </td>
                            <td>
                                @if (carro.Estado == "Ativo")
                                {
                                    <span class="badge bg-success">Ativo</span>
                                }
                                else if (carro.Estado == "Removido")
                                {
                                    <span class="badge bg-danger">Removido</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">@carro.Estado</span>
                                }
                            </td>
                            <td>
                                <small class="text-muted">@carro.DataCriacao.ToString("dd/MM/yyyy")</small>
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Details", "Carros", new { area = "Vendedores", id = carro.Id })" class="btn btn-sm btn-info" title="Ver Detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", "Carros", new { area = "Vendedores", id = carro.Id })" class="btn btn-sm btn-warning" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Carros", new { area = "Vendedores", id = carro.Id })" class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h5>Nenhum carro encontrado</h5>
            <p class="mb-3">Ainda não tem carros publicados. Comece criando o seu primeiro anúncio!</p>
            <a href="@Url.Action("Create", "Carros", new { area = "Vendedores" })" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Criar Primeiro Carro
            </a>
        </div>
    }
</div>
