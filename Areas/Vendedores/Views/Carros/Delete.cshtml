@model AutoMarket.Models.Veiculo
@{
    ViewData["Title"] = "Remover Carro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-main" style="max-width: 600px;">
    <div class="card card-lg">
        <h1 style="color: #dc3545; margin-bottom: 1.5rem;">Remover Carro</h1>

        <p style="font-size: 1.1rem; margin-bottom: 1rem;">
            Tem a certeza que deseja remover o seguinte carro?
        </p>

        <div style="background: #f8f9fa; padding: 1.5rem; border-radius: 6px; margin-bottom: 2rem;">
            <table style="width: 100%; border-collapse: collapse;">
                <tr>
                    <td style="padding: 0.5rem 0;"><strong>Marca & Modelo:</strong></td>
                    <td style="padding: 0.5rem 0;">@Model.Marca @Model.Modelo</td>
                </tr>
                <tr>
                    <td style="padding: 0.5rem 0;"><strong>Matrícula:</strong></td>
                    <td style="padding: 0.5rem 0;"><code>@Model.Matricula</code></td>
                </tr>
                <tr>
                    <td style="padding: 0.5rem 0;"><strong>Ano:</strong></td>
                    <td style="padding: 0.5rem 0;">@Model.Ano</td>
                </tr>
                <tr>
                    <td style="padding: 0.5rem 0;"><strong>Preço:</strong></td>
                    <td style="padding: 0.5rem 0;">€@Model.Preco.ToString("F2")</td>
                </tr>
                <tr>
                    <td style="padding: 0.5rem 0;"><strong>Estado Atual:</strong></td>
                    <td style="padding: 0.5rem 0;">
                        <span class="status-badge status-active">@Model.Estado.ToString()</span>
                    </td>
                </tr>
            </table>
        </div>

        <div style="background: #fff3cd; color: #856404; padding: 1rem; border-radius: 6px; border-left: 4px solid #ffc107; margin-bottom: 2rem;">
            <strong>?? Atenção:</strong> Esta ação muda o estado do carro para "Removido", mas mantém o histórico.
            Os dados não serão apagados da base de dados.
        </div>

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: flex; gap: 1rem; justify-content: center;">
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-danger" style="padding: 0.6rem 2rem; background: #dc3545; color: #fff; border: none; border-radius: 4px; cursor: pointer; font-size: 1rem;">
                Sim, Remover
            </button>

            <a asp-action="Index" class="btn btn-secondary" style="padding: 0.6rem 2rem; background: #6c757d; color: #fff; border: none; border-radius: 4px; cursor: pointer; text-decoration: none; display: inline-flex; align-items: center;">
                Cancelar
            </a>
        </form>
    </div>
</div>

<style>
    .btn-danger:hover {
        background: #c82333 !important;
    }
    .btn-secondary:hover {
        background: #5a6268 !important;
    }
</style>
