@model AutoMarket.Models.ViewModels.Veiculos.CreateVeiculoViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
    Layout = "~/Areas/Vendedores/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <h1 class="h3 mb-4 text-center">@Localizer["PublishHeading"]</h1>

            <div class="wizard-progress">
                <div class="progress-track"></div>
                <div class="progress-fill" id="progressFill"></div>
                <div class="step-indicators">
                    <div class="step-indicator active" data-step="1">
                        <div class="step-circle"><i class="bi bi-car-front"></i></div>
                        <div class="step-label">@Localizer["Step1Label"]</div>
                    </div>
                    <div class="step-indicator" data-step="2">
                        <div class="step-circle"><i class="bi bi-gear-wide-connected"></i></div>
                        <div class="step-label">@Localizer["Step2Label"]</div>
                    </div>
                    <div class="step-indicator" data-step="3">
                        <div class="step-circle"><i class="bi bi-images"></i></div>
                        <div class="step-label">@Localizer["Step3Label"]</div>
                    </div>
                </div>
            </div>

            <form asp-action="Create" asp-controller="Veiculos" asp-area="Vendedores"
                  method="post" enctype="multipart/form-data" id="createCarForm">

                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" aria-live="polite"></div>

                <div class="step-content active" id="step1">
                    <div class="card shadow-sm">
                        <div class="card-body p-4">
                            <h5 class="card-title mb-4 text-primary">@Localizer["WhatSelling"]</h5>

                            <div class="mb-3">
                                <label asp-for="Titulo" class="form-label fw-bold"></label>
                                <input asp-for="Titulo" class="form-control form-control-lg" placeholder="@Localizer["TitlePlaceholder"]" />
                                <span asp-validation-for="Titulo" class="text-danger"></span>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Marca" class="form-label"></label>
                                    <input asp-for="Marca" class="form-control" placeholder="@Localizer["MarcaPlaceholder"]" />
                                    <span asp-validation-for="Marca" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Modelo" class="form-label"></label>
                                    <input asp-for="Modelo" class="form-control" placeholder="@Localizer["ModeloPlaceholder"]" />
                                    <span asp-validation-for="Modelo" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Ano" class="form-label"></label>
                                    <input asp-for="Ano" type="number" class="form-control" placeholder="@Localizer["AnoPlaceholder", DateTime.Now.Year]" />
                                    <span asp-validation-for="Ano" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="CategoriaId" class="form-label"></label>
                                    <select asp-for="CategoriaId" class="form-select">
                                        <option value="">@Localizer["CategoriaPrompt"]</option>
                                        @foreach (var cat in Model.CategoriesDropdown)
                                        {
                                            <option value="@cat.Id">@cat.Nome</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="step-content" id="step2">
                    <div class="card shadow-sm">
                        <div class="card-body p-4">
                            <h5 class="card-title mb-4 text-primary">@Localizer["TechnicalDetails"]</h5>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="Combustivel" class="form-label"></label>
                                    <select asp-for="Combustivel" class="form-select">
                                        <option value="">@Localizer["SelectPrompt"]</option>
                                        <option value="Gasolina">@Localizer["CombustivelGasolina"]</option>
                                        <option value="Gasóleo">@Localizer["CombustivelGasoleo"]</option>
                                        <option value="Híbrido">@Localizer["CombustivelHibrido"]</option>
                                        <option value="Elétrico">@Localizer["CombustivelEletrico"]</option>
                                        <option value="GLP">@Localizer["CombustivelGlp"]</option>
                                    </select>
                                    <span asp-validation-for="Combustivel" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Caixa" class="form-label"></label>
                                    <select asp-for="Caixa" class="form-select">
                                        <option value="">@Localizer["SelectPrompt"]</option>
                                        <option value="Manual">@Localizer["CaixaManual"]</option>
                                        <option value="Automática">@Localizer["CaixaAutomatica"]</option>
                                    </select>
                                    <span asp-validation-for="Caixa" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Km" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Km" type="number" class="form-control" />
                                        <span class="input-group-text">@Localizer["KmSuffix"]</span>
                                    </div>
                                    <span asp-validation-for="Km" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Condicao" class="form-label"></label>
                                    <select asp-for="Condicao" class="form-select">
                                        <option value="Usado">@Localizer["CondicaoUsado"]</option>
                                        <option value="Novo">@Localizer["CondicaoNovo"]</option>
                                        <option value="Semi-novo">@Localizer["CondicaoSemiNovo"]</option>
                                    </select>
                                    <span asp-validation-for="Condicao" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Preco" class="form-label fw-bold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">€</span>
                                        <input asp-for="Preco" type="number" step="0.01" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Preco" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="step-content" id="step3">
                    <div class="card shadow-sm">
                        <div class="card-body p-4">
                            <h5 class="card-title mb-4 text-primary">@Localizer["MediaAndLocation"]</h5>

                            <div class="mb-4">
                                <label asp-for="Fotos" class="form-label fw-bold">@Localizer["PhotosLabel"]</label>
                                <div class="upload-area" onclick="document.getElementById('Fotos').click()" aria-describedby="uploadHelp" role="button" tabindex="0">
                                    <i class="bi bi-cloud-upload display-4 text-muted"></i>
                                    <p class="mt-2 text-muted">@Localizer["UploadPrompt"]</p>
                                    <small class="text-muted d-block" id="uploadHelp">@Localizer["UploadMax"]</small>
                                </div>
                                <input asp-for="Fotos"
                                       id="Fotos"
                                       type="file"
                                       class="d-none"
                                       accept=".jpg,.jpeg,.png,.webp"
                                       multiple
                                       onchange="previewImages(this)"
                                       aria-describedby="uploadHelp"
                                       data-max-files="10"
                                       data-max-files-message="@Localizer["MaxFilesMessage"]" />
                                <span asp-validation-for="Fotos" class="text-danger"></span>
                                <div id="imagePreviewContainer" class="row mt-3 g-2"></div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Localizacao" class="form-label"></label>
                                <input asp-for="Localizacao" class="form-control" placeholder="@Localizer["LocationPlaceholder"]" />
                                <span asp-validation-for="Localizacao" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Descricao" class="form-label"></label>
                                <textarea asp-for="Descricao" class="form-control" rows="4" placeholder="@Localizer["DescriptionPlaceholder"]"></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="button" class="btn btn-outline-secondary btn-lg" id="btnPrev" style="display:none;">
                        <i class="bi bi-arrow-left"></i> @Localizer["Prev"]
                    </button>

                    <button type="button" class="btn btn-primary btn-lg ms-auto" id="btnNext">
                        @Localizer["Next"] <i class="bi bi-arrow-right"></i>
                    </button>

                    <button type="submit" class="btn btn-success btn-lg ms-auto" id="btnSubmit" style="display:none;">
                        <i class="bi bi-check-lg"></i> @Localizer["Publish"]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/veiculos-create.js"></script>
}