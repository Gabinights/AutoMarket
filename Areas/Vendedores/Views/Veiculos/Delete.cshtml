@model AutoMarket.Models.ViewModels.Veiculos.ListVeiculoViewModel
@{
    ViewData["Title"] = "Eliminar Veículo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirmar Eliminação</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Atenção!</strong> Esta ação é irreversível. O veículo será removido da sua lista de anúncios.
                    </div>

                    <h6 class="mb-3">Tem certeza que deseja eliminar o seguinte veículo?</h6>

                    <div class="card mb-4 bg-light">
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.ImagemPrincipal))
                            {
                                <img src="/images/veiculos/@Model.ImagemPrincipal" alt="@Model.Titulo" style="width: 100%; max-height: 300px; object-fit: cover; border-radius: 4px; margin-bottom: 15px;" />
                            }
                            else
                            {
                                <div style="width: 100%; height: 300px; background: #e0e0e0; border-radius: 4px; display: flex; align-items: center; justify-content: center; margin-bottom: 15px;">
                                    <span style="color: #999;">Sem imagem</span>
                                </div>
                            }

                            <table class="table table-sm">
                                <tr>
                                    <th>Título:</th>
                                    <td><strong>@Model.Titulo</strong></td>
                                </tr>
                                <tr>
                                    <th>Marca/Modelo:</th>
                                    <td>@Model.Marca @Model.Modelo</td>
                                </tr>
                                <tr>
                                    <th>Ano:</th>
                                    <td>@Model.Ano</td>
                                </tr>
                                <tr>
                                    <th>Preço:</th>
                                    <td><span class="text-primary fw-bold">€@Model.Preco.ToString("F2")</span></td>
                                </tr>
                                <tr>
                                    <th>Quilómetros:</th>
                                    <td>@Model.Km.ToString("N0") km</td>
                                </tr>
                                <tr>
                                    <th>Combustível:</th>
                                    <td>@Model.Combustivel</td>
                                </tr>
                                <tr>
                                    <th>Publicado em:</th>
                                    <td>@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light">
                    <form asp-action="Delete" asp-controller="Veiculos" asp-area="Vendedores" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash"></i> Sim, Eliminar Veículo
                        </button>
                    </form>
                    <a href="@Url.Action("Index", "Veiculos", new { area = "Vendedores" })" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Não, Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
