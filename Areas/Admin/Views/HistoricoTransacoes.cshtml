@using AutoMarket.Models.Entities
@model IEnumerable<Transacao>
@{
    ViewData["Title"] = "Histórico de Transações";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0"><i class="bi bi-receipt"></i> Histórico de Transações</h2>
                    <small class="text-muted">Todas as transações do sistema</small>
                </div>
                <a href="/Admin/Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up"></i> Registro de Transações
                    </h5>
                </div>

                @if (!Model.Any())
                {
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 3rem; color: #adb5bd;"></i>
                        <h5 class="mt-3">Nenhuma transação encontrada</h5>
                        <p class="text-muted">Não há transações registadas no sistema ainda.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 15%">Data</th>
                                    <th style="width: 20%">Veículo</th>
                                    <th style="width: 15%">Comprador</th>
                                    <th style="width: 15%">Vendedor</th>
                                    <th style="width: 12%">Valor</th>
                                    <th style="width: 12%">Método</th>
                                    <th style="width: 11%">Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transacao in Model)
                                {
                                    <tr>
                                        <td>
                                            <small class="text-muted">@transacao.DataTransacao.ToString("dd/MM/yyyy HH:mm")</small>
                                        </td>
                                        <td class="fw-bold">
                                            @if (transacao.Veiculo != null)
                                            {
                                                <i class="bi bi-car-front"></i> @transacao.Veiculo.Marca @transacao.Veiculo.Modelo
                                            }
                                            else
                                            {
                                                <span class="text-muted">Veículo removido</span>
                                            }
                                        </td>
                                        <td>
                                            @if (transacao.Comprador?.User != null)
                                            {
                                                if (transacao.Comprador.User.IsDeleted)
                                                {
                                                    <span class="text-muted">
                                                        @transacao.Comprador.User.Nome
                                                        <span class="badge bg-danger">Eliminado</span>
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span>@transacao.Comprador.User.Nome</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">Dados apagados</span>
                                            }
                                        </td>
                                        <td>
                                            @if (transacao.Veiculo?.Vendedor?.User != null)
                                            {
                                                <span>@transacao.Veiculo.Vendedor.User.Nome</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Vendedor desconhecido</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="fw-bold text-success">€@transacao.ValorPago.ToString("F2")</span>
                                        </td>
                                        <td>
                                            <small>@transacao.Metodo</small>
                                        </td>
                                        <td>
                                            @{
                                                var estadoBadge = transacao.Estado.ToString() switch
                                                {
                                                    "Pendente" => "bg-warning",
                                                    "Pago" => "bg-success",
                                                    "Enviado" => "bg-info",
                                                    "Cancelado" => "bg-danger",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @estadoBadge">@transacao.Estado</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- PAGINAÇÃO -->
                    @if (totalPages > 1)
                    {
                        <nav class="card-footer" aria-label="Paginação">
                            <ul class="pagination justify-content-center mb-0">
                                @if (currentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="/Admin/HistoricoTransacoes?page=@(currentPage - 1)">Anterior</a>
                                    </li>
                                }

                                @for (int i = 1; i <= totalPages; i++)
                                {
                                    if (i == currentPage)
                                    {
                                        <li class="page-item active">
                                            <span class="page-link">@i</span>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="/Admin/HistoricoTransacoes?page=@i">@i</a>
                                        </li>
                                    }
                                }

                                @if (currentPage < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="/Admin/HistoricoTransacoes?page=@(currentPage + 1)">Próximo</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                }
            </div>
        </div>
    </div>
</div>