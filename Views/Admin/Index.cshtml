@model IEnumerable<AutoMarket.Models.Vendedor>
@using AutoMarket.Models.Enums

@{
    ViewData["Title"] = "Backoffice Admin - Aprovações de Vendedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0"><i class="bi bi-shield-check"></i> Backoffice Admin</h2>
                    <small class="text-muted">Gestão de aprovações de vendedores</small>
                </div>
                <a href="/Admin/HistoricoTransacoes" class="btn btn-outline-info">
                    <i class="bi bi-receipt"></i> Ver Transações
                </a>
            </div>
        </div>
    </div>

    @if (TempData["MensagemStatus"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["MensagemStatus"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-hourglass-split"></i> Vendedores Pendentes de Aprovação
                    </h5>
                    <span class="badge bg-light text-primary fs-6">@Model.Count()</span>
                </div>

                @if (!Model.Any())
                {
                    <div class="card-body text-center py-5">
                        <i class="bi bi-check-all" style="font-size: 3rem; color: #28a745;"></i>
                        <h5 class="mt-3">Nenhum vendedor pendente</h5>
                        <p class="text-muted">Todos os vendedores foram processados!</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 25%">Nome</th>
                                    <th style="width: 25%">Email</th>
                                    <th style="width: 15%">Tipo Conta</th>
                                    <th style="width: 15%">Data Inscrição</th>
                                    <th style="width: 20%">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var vendedor in Model)
                                {
                                    <tr>
                                        <td class="fw-bold">
                                            <i class="bi bi-person-circle"></i> @vendedor.User.Nome
                                        </td>
                                        <td>
                                            <a href="mailto:@vendedor.User.Email" class="text-decoration-none">
                                                @vendedor.User.Email
                                            </a>
                                        </td>
                                        <td>
                                            @if (vendedor.TipoConta == TipoConta.Empresa)
                                            {
                                                <span class="badge bg-secondary"><i class="bi bi-building"></i> Empresa</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info text-dark"><i class="bi bi-person-check"></i> Particular</span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">@vendedor.User.DataRegisto.ToString("dd/MM/yyyy")</small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <!-- APROVAR -->
                                                <form method="post" action="/Admin/Aprovar/@vendedor.Id" style="display: inline;">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-success" 
                                                            title="Aprovar vendedor"
                                                            onclick="return confirm('Aprovar este vendedor?');">
                                                        <i class="bi bi-check-lg"></i>
                                                    </button>
                                                </form>

                                                <!-- REJEITAR -->
                                                <button type="button" class="btn btn-danger" 
                                                        title="Rejeitar vendedor"
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#modalRejeitar" 
                                                        data-vendedor-id="@vendedor.Id"
                                                        data-vendedor-nome="@vendedor.User.Nome">
                                                    <i class="bi bi-x-lg"></i>
                                                </button>

                                                <!-- DETALHES -->
                                                <button type="button" class="btn btn-secondary" 
                                                        title="Ver detalhes"
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#modalDetalhes"
                                                        data-vendedor-nome="@vendedor.User.Nome"
                                                        data-vendedor-email="@vendedor.User.Email"
                                                        data-vendedor-morada="@vendedor.User.Morada"
                                                        data-vendedor-contacto="@vendedor.User.Contacto"
                                                        data-vendedor-nif="@(vendedor.User.NIF ?? "Não preenchido")"
                                                        data-vendedor-tipo="@vendedor.TipoConta">
                                                    <i class="bi bi-info-circle"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- PAGINAÇÃO -->
                    @if (totalPages > 1)
                    {
                        <nav class="card-footer" aria-label="Paginação">
                            <ul class="pagination justify-content-center mb-0">
                                @if (currentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="/Admin/Index?page=@(currentPage - 1)">Anterior</a>
                                    </li>
                                }

                                @for (int i = 1; i <= totalPages; i++)
                                {
                                    if (i == currentPage)
                                    {
                                        <li class="page-item active">
                                            <span class="page-link">@i</span>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="/Admin/Index?page=@i">@i</a>
                                        </li>
                                    }
                                }

                                @if (currentPage < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="/Admin/Index?page=@(currentPage + 1)">Próximo</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                }
            </div>
        </div>
    </div>
</div>

<!-- ============================================================
     MODAL: REJEITAR VENDEDOR
     ============================================================ -->
<div class="modal fade" id="modalRejeitar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" id="formRejeitar">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Rejeitar Vendedor</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Tem a certeza que deseja <strong>rejeitar</strong> este vendedor?</p>
                    <p id="nomeVendedor" class="fw-bold text-danger"></p>

                    <div class="form-group">
                        <label for="motivo" class="form-label">Motivo da Rejeição:</label>
                        <textarea class="form-control" id="motivo" name="motivo" rows="3" 
                                  placeholder="Descreva o motivo da rejeição..." required></textarea>
                        <small class="text-muted">Este motivo será registado no sistema.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-lg"></i> Rejeitar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ============================================================
     MODAL: DETALHES DO VENDEDOR
     ============================================================ -->
<div class="modal fade" id="modalDetalhes" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">Detalhes do Vendedor</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold text-muted">Nome:</label>
                        <p id="detNome" class="fs-6"></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold text-muted">Email:</label>
                        <p id="detEmail" class="fs-6"></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold text-muted">Morada:</label>
                        <p id="detMorada" class="fs-6"></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold text-muted">Contacto:</label>
                        <p id="detContacto" class="fs-6"></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold text-muted">NIF:</label>
                        <p id="detNif" class="fs-6"></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold text-muted">Tipo de Conta:</label>
                        <p id="detTipo" class="fs-6"></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // MODAL REJEITAR
        const modalRejeitar = document.getElementById('modalRejeitar');
        if (modalRejeitar) {
            modalRejeitar.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const vendedorId = button.getAttribute('data-vendedor-id');
                const vendedorNome = button.getAttribute('data-vendedor-nome');

                document.getElementById('nomeVendedor').textContent = vendedorNome;
                document.getElementById('formRejeitar').action = `/Admin/Rejeitar/${vendedorId}`;
                document.getElementById('motivo').value = '';
            });
        }

        // MODAL DETALHES
        const modalDetalhes = document.getElementById('modalDetalhes');
        if (modalDetalhes) {
            modalDetalhes.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                document.getElementById('detNome').textContent = button.getAttribute('data-vendedor-nome');
                document.getElementById('detEmail').textContent = button.getAttribute('data-vendedor-email');
                document.getElementById('detMorada').textContent = button.getAttribute('data-vendedor-morada');
                document.getElementById('detContacto').textContent = button.getAttribute('data-vendedor-contacto');
                document.getElementById('detNif').textContent = button.getAttribute('data-vendedor-nif');
                document.getElementById('detTipo').textContent = button.getAttribute('data-vendedor-tipo');
            });
        }
    </script>
}