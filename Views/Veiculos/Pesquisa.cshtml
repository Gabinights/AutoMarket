@model IEnumerable<AutoMarket.Models.Veiculo>
@{
    ViewData["Title"] = "Pesquisa de Veículos";
}

<div class="pesquisa-container" style="display: flex; gap: 2rem; max-width: 1400px; margin: 2rem auto; padding: 0 1rem;">
    
    <!-- SIDEBAR FILTROS (Esquerda) -->
    <aside class="filtros-sidebar" style="min-width: 280px; flex-shrink: 0;">
        <div style="background: #fff; padding: 1.5rem; border-radius: 8px; box-shadow: 0 2px 8px #00214710;">
            <h2 style="color: var(--cor-primaria); margin-bottom: 1.5rem; font-size: 1.2rem;">Filtros</h2>

            <form method="get" action="/Veiculos/Pesquisa" id="filtrosForm">
                
                <!-- Marca -->
                <div style="margin-bottom: 1.5rem;">
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--cor-primaria);">Marca</label>
                    <select name="marca" style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px; font-size: 0.95rem;">
                        <option value="">-- Todas as marcas --</option>
                        @foreach (var m in (ViewData["Marcas"] as List<string>) ?? new List<string>())
                        {
                            <option value="@m" selected="@(ViewData["MarcaSelecionada"]?.ToString() == m)">@m</option>
                        }
                    </select>
                </div>

                <!-- Modelo -->
                <div style="margin-bottom: 1.5rem;">
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--cor-primaria);">Modelo</label>
                    <select name="modelo" style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px; font-size: 0.95rem;">
                        <option value="">-- Todos os modelos --</option>
                        @foreach (var m in (ViewData["Modelos"] as List<string>) ?? new List<string>())
                        {
                            <option value="@m" selected="@(ViewData["ModeloSelecionado"]?.ToString() == m)">@m</option>
                        }
                    </select>
                </div>

                <!-- Cor -->
                <div style="margin-bottom: 1.5rem;">
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--cor-primaria);">Cor</label>
                    <select name="cor" style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px; font-size: 0.95rem;">
                        <option value="">-- Todas as cores --</option>
                        @foreach (var c in (ViewData["Cores"] as List<string>) ?? new List<string>())
                        {
                            <option value="@c" selected="@(ViewData["CorSelecionada"]?.ToString() == c)">@c</option>
                        }
                    </select>
                </div>

                <!-- Combustível -->
                <div style="margin-bottom: 1.5rem;">
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--cor-primaria);">Combustível</label>
                    <select name="combustivel" style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px; font-size: 0.95rem;">
                        <option value="">-- Todos --</option>
                        @foreach (var c in (ViewData["Combustiveis"] as List<string>) ?? new List<string>())
                        {
                            <option value="@c" selected="@(ViewData["CombustivelSelecionado"]?.ToString() == c)">@c</option>
                        }
                    </select>
                </div>

                <!-- Ano -->
                <div style="margin-bottom: 1.5rem;">
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--cor-primaria);">Ano</label>
                    <select name="ano" style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px; font-size: 0.95rem;">
                        <option value="">-- Todos os anos --</option>
                        @foreach (var a in (ViewData["Anos"] as List<int?>) ?? new List<int?>())
                        {
                            <option value="@a" selected="@(ViewData["AnoSelecionado"]?.ToString() == a.ToString())">@a</option>
                        }
                    </select>
                </div>

                <!-- Tipo/Segmento -->
                <div style="margin-bottom: 1.5rem;">
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--cor-primaria);">Tipo (Segmento)</label>
                    <select name="categoria" style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px; font-size: 0.95rem;">
                        <option value="">-- Todos os tipos --</option>
                        @foreach (var cat in (ViewData["Categorias"] as List<string>) ?? new List<string>())
                        {
                            <option value="@cat" selected="@(ViewData["CategoriaSelecionada"]?.ToString() == cat)">@cat</option>
                        }
                    </select>
                </div>

                <!-- Preço Min-Max -->
                <div style="margin-bottom: 1.5rem;">
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--cor-primaria);">Preço (€)</label>
                    <div style="display: flex; gap: 0.5rem;">
                        <input type="number" name="precoMin" placeholder="Mín" value="@ViewData["PrecoMin"]" style="flex: 1; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px;" />
                        <input type="number" name="precoMax" placeholder="Máx" value="@ViewData["PrecoMax"]" style="flex: 1; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px;" />
                    </div>
                </div>

                <!-- KM Min-Max -->
                <div style="margin-bottom: 1.5rem;">
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: var(--cor-primaria);">Quilómetros</label>
                    <div style="display: flex; gap: 0.5rem;">
                        <input type="number" name="kmMin" placeholder="Mín" value="@ViewData["KmMin"]" style="flex: 1; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px;" />
                        <input type="number" name="kmMax" placeholder="Máx" value="@ViewData["KmMax"]" style="flex: 1; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px;" />
                    </div>
                </div>

                <!-- Botões -->
                <div style="display: flex; gap: 0.5rem;">
                    <button type="submit" class="btn-cta" style="flex: 1; padding: 0.6rem; border: none; border-radius: 4px; cursor: pointer; font-weight: 600;">Pesquisar</button>
                    <a href="/Veiculos/Pesquisa" class="btn-primario" style="flex: 1; padding: 0.6rem; text-decoration: none; text-align: center; border-radius: 4px; cursor: pointer; font-weight: 600;">Limpar</a>
                </div>
            </form>
        </div>
    </aside>

    <!-- ANÚNCIOS (Direita) -->
    <section style="flex: 1;">
        <div style="background: #fff; padding: 1.5rem; border-radius: 8px; box-shadow: 0 2px 8px #00214710;">
            <!-- Ordenação -->
            <div style="margin-bottom: 1.5rem; display: flex; justify-content: space-between; align-items: center;">
                <h2 style="color: var(--cor-primaria); margin: 0; font-size: 1.2rem;">Veículos Disponíveis</h2>
                <div>
                    <label style="margin-right: 0.5rem; font-weight: 600;">Ordenar:</label>
                    <select id="ordenacao" onchange="document.getElementById('filtrosForm').submit()" style="padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px;">
                        <option value="recente" selected="@(ViewData["Ordenacao"]?.ToString() == "recente")">Mais recente</option>
                        <option value="preco_asc" selected="@(ViewData["Ordenacao"]?.ToString() == "preco_asc")">Preço ascendente</option>
                        <option value="preco_desc" selected="@(ViewData["Ordenacao"]?.ToString() == "preco_desc")">Preço descendente</option>
                        <option value="km_asc" selected="@(ViewData["Ordenacao"]?.ToString() == "km_asc")">KM ascendentes</option>
                        <option value="km_desc" selected="@(ViewData["Ordenacao"]?.ToString() == "km_desc")">KM descendentes</option>
                        <option value="ano_asc" selected="@(ViewData["Ordenacao"]?.ToString() == "ano_asc")">Ano ascendente</option>
                        <option value="ano_desc" selected="@(ViewData["Ordenacao"]?.ToString() == "ano_desc")">Ano descendente</option>
                    </select>
                </div>
            </div>

            <!-- Grid de Anúncios -->
            @if (Model.Any())
            {
                <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 1.5rem;">
                    @foreach (var veiculo in Model)
                    {
                        <div class="vehicle-card" style="background: #f9f9f9; border: 1px solid #eee; border-radius: 8px; overflow: hidden; transition: all 0.2s;">
                            @if (!string.IsNullOrEmpty(veiculo.ImagemPrincipal))
                            {
                                <img src="/images/@veiculo.ImagemPrincipal" alt="@veiculo.Marca @veiculo.Modelo" style="width: 100%; height: 180px; object-fit: cover;" />
                            }
                            else
                            {
                                <div style="width: 100%; height: 180px; background: #e0e0e0; display: flex; align-items: center; justify-content: center; color: #999;">
                                    Sem imagem
                                </div>
                            }
                            <div style="padding: 1rem;">
                                <h3 style="color: var(--cor-primaria); margin: 0 0 0.5rem 0; font-size: 1rem;">@veiculo.Marca @veiculo.Modelo</h3>
                                <p style="color: var(--cor-cta); font-size: 1.3rem; font-weight: bold; margin: 0.5rem 0;">€@veiculo.Preco.ToString("F2")</p>
                                <div style="color: #666; font-size: 0.9rem; margin-bottom: 0.5rem;">
                                    <p style="margin: 0.25rem 0;">?? @veiculo.Ano</p>
                                    <p style="margin: 0.25rem 0;">?? @veiculo.Quilometros?.ToString("N0") km</p>
                                    <p style="margin: 0.25rem 0;">? @veiculo.Combustivel</p>
                                </div>
                                <p style="color: #888; font-size: 0.85rem; margin: 0.5rem 0;">@(veiculo.Categoria ?? "Sem categoria")</p>
                                <a href="/Veiculos/Detalhe/@veiculo.Id" class="btn-primario" style="display: block; text-align: center; padding: 0.5rem; text-decoration: none; border-radius: 4px; margin-top: 1rem;">Ver Detalhes</a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div style="text-align: center; padding: 3rem 1rem; color: #999;">
                    <p style="font-size: 1.1rem;">Nenhum veículo encontrado com os filtros selecionados.</p>
                    <a href="/Veiculos/Pesquisa" class="btn-cta" style="padding: 0.6rem 2rem; text-decoration: none; border-radius: 4px; display: inline-block; margin-top: 1rem;">Limpar Filtros</a>
                </div>
            }
        </div>
    </section>
</div>

<style>
    .vehicle-card:hover {
        box-shadow: 0 4px 12px #00214720;
        transform: translateY(-2px);
    }
</style>

<link rel="stylesheet" href="~/css/pesquisa.css" />

<script>
    // Atualizar o campo de ordenação
    document.getElementById('ordenacao').addEventListener('change', function() {
        var ordenacao = this.value;
        var form = document.getElementById('filtrosForm');
        
        // Adicionar campo oculto se não existir
        var ordenacaoInput = form.querySelector('input[name="ordenacao"]');
        if (!ordenacaoInput) {
            ordenacaoInput = document.createElement('input');
            ordenacaoInput.type = 'hidden';
            ordenacaoInput.name = 'ordenacao';
            form.appendChild(ordenacaoInput);
        }
        
        ordenacaoInput.value = ordenacao;
        form.submit();
    });
</script>
