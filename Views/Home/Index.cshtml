@using Microsoft.AspNetCore.Identity;
@inject SignInManager<AutoMarket.Models.Utilizador> SignInManager
@{
    ViewData["Title"] = "Início";
}
<!-- Header e navegação -->
<header>
    <div class="nav">
        <nav>
            <ul>
                <li><a href="/Veiculos">Veículos</a></li>
                <li><a href="/Home/Sobre">Sobre</a></li>
            </ul>
        </nav>
        <div class="header-actions">
            @if (SignInManager.IsSignedIn(User))
            {
                <a href="/Conta/Favoritos" title="Favoritos"><span style="font-size:1.2em">&#10084;&#65039;</span></a>
            }
            <a href="/Anuncios/Criar" class="btn-cta">Vender Carro</a>
        </div>
    </div>
</header>

<main style="padding-top:2rem; padding-bottom:2rem;">
    <section style="text-align:center;">
        <h1>Encontre o Seu Próximo Veículo</h1>
        <form class="search-form" style="margin: 2rem auto; max-width: 700px; display:flex; gap:1rem; flex-wrap: wrap; background: #fff; padding: 1.2rem 1rem; border-radius: 8px; box-shadow: 0 2px 8px #00000015;">
            <input type="text" placeholder="Marca" name="marca" style="flex:1;">
            <input type="text" placeholder="Modelo" name="modelo" style="flex:1;">
            <input type="number" placeholder="Preço até" name="preco" style="width:120px;">
            <a href="#" style="align-self:center;font-size:0.9em;" title="Avançado">+ Filtros Avançados</a>
            <button type="submit" class="btn-primario">Pesquisar</button>
        </form>
    </section>

    <section style="margin:3rem 0;">
        <h2 style="margin-bottom:1rem;">Veículos em Destaque</h2>
        <div style="display:flex; flex-wrap: wrap; gap:2rem; justify-content: center;">
            <!-- Cards de exemplo -->
            <div class="vehicle-card">
                <img src="/images/carro_exemplo1.jpg" alt="Veículo 1" />
                <h3>BMW Série 1</h3>
                <div class="price">€19.900</div>
                <div class="meta">2019 • 45.000km • Lisboa</div>
            </div>
            <div class="vehicle-card">
                <img src="/images/carro_exemplo2.jpg" alt="Veículo 2" />
                <h3>Renault Clio</h3>
                <div class="price">€13.400</div>
                <div class="meta">2018 • 33.000km • Porto</div>
            </div>
            <div class="vehicle-card">
                <img src="/images/carro_exemplo3.jpg" alt="Veículo 3" />
                <h3>Volkswagen Golf</h3>
                <div class="price">€22.500</div>
                <div class="meta">2020 • 29.900km • Braga</div>
            </div>
            <div class="vehicle-card">
                <img src="/images/carro_exemplo4.jpg" alt="Veículo 4" />
                <h3>Fiat 500</h3>
                <div class="price">€10.950</div>
                <div class="meta">2016 • 70.000km • Faro</div>
            </div>
        </div>
    </section>

    <section style="margin:3rem 0; display:flex; flex-wrap:wrap; gap:2rem; justify-content:center;">
        <div style="flex:1; min-width:200px;">
            <h3>Garantia de Qualidade</h3>
            <p>Todos os veículos são verificados e avaliados.</p>
        </div>
        <div style="flex:1; min-width:200px;">
            <h3>Suporte Dedicado</h3>
            <p>Acompanhamento antes, durante e após a compra.</p>
        </div>
        <div style="flex:1; min-width:200px;">
            <h3>Compra Segura</h3>
            <p>Pagamentos e reservas com total transparência.</p>
        </div>
    </section>
</main>

<footer>
    &copy; 2025 AutoMarket<br/>
    Plataforma de compra e venda de veículos usados.
</footer>

@section Styles {
    <link rel="stylesheet" href="/css/style.css" />
}
@section Scripts {
    <script src="/js/script.js"></script>
}
