@{
    ViewData["Title"] = "Os Meus Anúncios";
}
<header>
    <div class="nav">
        <a href="/" class="logo">AutoMarket</a>
        <nav>
            <ul>
                <li><a href="/">Início</a></li>
                <li><a href="/Veiculos">Veículos</a></li>
                <li><a href="/Anuncios/Criar" class="btn-cta">Vender Carro</a></li>
                <li><a href="/Home/Sobre">Sobre</a></li>
            </ul>
        </nav>
        <div class="header-actions">
            <a href="/Conta/Favoritos" title="Favoritos"><span style="font-size:1.2em">&#10084;&#65039;</span></a>
            <a href="/Conta/Login" class="btn-primario">Entrar</a>
            <a href="/Anuncios/Criar" class="btn-cta">Vender Carro</a>
        </div>
    </div>
</header>
<main style="max-width:1050px;margin:2rem auto 3rem auto;">
    <h1 style="margin-bottom:2rem;">Os Meus Anúncios</h1>
    <div style="display:flex;flex-wrap:wrap;gap:2rem;">
        <!-- Cards exemplo de anúncios do vendedor -->
        <div class="vehicle-card">
            <img src="/images/carro_exemplo1.jpg" alt="BMW Série 1" />
            <h3>BMW Série 1</h3>
            <div class="price">€19.900</div>
            <div class="meta">2019 • 45.000km • Lisboa</div>
            <div style="margin:0.8rem 0;">
                <span style="background:#bee3b4;color:#256908;border-radius:3px;padding:2px 7px;font-size:0.94em">Ativo</span>
            </div>
            <div style="display:flex;gap:0.7rem;">
                <a href="#" class="btn-primario">Editar</a>
                <a href="#" class="btn-primario" style="background:#999;">Pausar</a>
                <a href="#" class="btn-cta">Remover</a>
            </div>
        </div>
        <div class="vehicle-card">
            <img src="/images/carro_exemplo2.jpg" alt="Renault Clio" />
            <h3>Renault Clio</h3>
            <div class="price">€13.400</div>
            <div class="meta">2018 • 33.000km • Porto</div>
            <div style="margin:0.8rem 0;">
                <span style="background:#ffe9a0;color:#b88301;border-radius:3px;padding:2px 7px;font-size:0.94em">Pausado</span>
            </div>
            <div style="display:flex;gap:0.7rem;">
                <a href="#" class="btn-primario">Editar</a>
                <a href="#" class="btn-primario" style="background:#bee3b4;color:#256908;">Ativar</a>
                <a href="#" class="btn-cta">Remover</a>
            </div>
        </div>
    </div>
</main>
<footer>
    &copy; 2025 AutoMarket<br /> Plataforma de compra e venda de veículos usados.
</footer>
@section Styles {
    <link rel="stylesheet" href="/css/style.css" />
}
@section Scripts {
    <script src="/js/script.js"></script>
}



