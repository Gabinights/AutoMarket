@model AutoMarket.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registo";
}
<main class="container" style="max-width:520px; margin:2rem auto;">
    <h2>Registo</h2>
    <form asp-controller="Conta" asp-action="Register" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Morada"></label>
            <input asp-for="Morada" class="form-control" />
            <span asp-validation-for="Morada" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Contactos"></label>
            <input asp-for="Contactos" class="form-control" />
            <span asp-validation-for="Contactos" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <input asp-for="IsSeller" class="form-check-input" id="sellerToggle" />
            <label asp-for="IsSeller" class="form-check-label">
                Quero vender carros nesta plataforma
            </label>
        </div>

        <div id="sellerFields" style="display:none; border-left: 3px solid #0d6efd; padding-left: 15px;">
            <div class="form-group mb-3">
                <label asp-for="NIF" class="control-label">NIF (Obrigatório para vendedores)</label>
                <input asp-for="NIF" class="form-control" />
                <span asp-validation-for="NIF" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsEmpresa" class="form-check-input" />
                <label asp-for="IsEmpresa" class="form-check-label">Sou uma Empresa</label>
            </div>
        </div>

        <button type="submit" class="btn btn-success w-100 mt-3">Registar</button>

        <div class="mt-3 text-center">
            <a asp-controller="Conta" asp-action="Login">Já tem conta? Entrar</a>
        </div>

    </form>
</main>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Função para alternar visibilidade
            function toggleSellerFields() {
                if ($('#sellerToggle').is(':checked')) {
                    $('#sellerFields').slideDown();
                } else {
                    $('#sellerFields').slideUp();
                }
            }

            // Executar no carregamento (caso haja erro de validação e a página recarregue)
            toggleSellerFields();

            // Executar quando o utilizador clica
            $('#sellerToggle').change(toggleSellerFields);
        });
    </script>
}











