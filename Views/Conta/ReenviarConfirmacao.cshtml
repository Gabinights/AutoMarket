@{
    ViewData["Title"] = "Reenviar Email de Confirmação";
}

<main class="container" style="max-width:450px; margin:2rem auto;">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title mb-4">Reenviar Email de Confirmação</h2>
            
            <p class="text-muted mb-4">
                Não recebeu o email de confirmação? Introduza o seu email abaixo e enviaremos um novo link.
            </p>

            <form asp-controller="Conta" asp-action="ReenviarConfirmacao" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-control" required 
                           placeholder="seu-email@exemplo.com" />
                </div>

                <button type="submit" class="btn btn-primary w-100">Reenviar Email</button>
            </form>

            <div class="mt-3 text-center">
                <a asp-controller="Conta" asp-action="Login" class="text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Voltar ao Login
                </a>
            </div>

            <div class="alert alert-info mt-4" role="alert">
                <small>
                    <strong>Dica:</strong> Verifique a sua pasta de Spam/Lixo Eletrônico se não encontrar o email.
                </small>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
