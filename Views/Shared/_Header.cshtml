@using Microsoft.AspNetCore.Identity;
@using AutoMarket.Models;
@inject SignInManager<Utilizador> SignInManager

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="background-color: var(--cor-primaria); padding: 1rem 0;">
        <div class="container-fluid" style="max-width: 100%; margin: 0; padding: 0 1rem; display: flex; align-items: center; justify-content: space-between;">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 1.5rem; font-weight: bold; color: #fff; margin: 0; flex-shrink: 0;">AutoMarket</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex" style="flex: 1; justify-content: center;">
                <ul class="navbar-nav" style="margin: 0;">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="color: #fff;">Veículos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Anuncios/Criar" style="color: #fff; font-weight: 600;">Vender Carro</a>
                    </li>
                </ul>
            </div>
            <ul class="navbar-nav ms-auto" style="margin: 0;">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <span class="nav-link" style="color: #fff; cursor: default;">
                            👤 @User.Identity?.Name?.Split("@")[0]
                        </span>
                    </li>
                    <li class="nav-item">
                        <form asp-area="" asp-controller="Conta" asp-action="Logout" method="post" class="form-inline" style="margin: 0;">
                            <button type="submit" class="btn" style="color: #fff; text-decoration: none; padding: 0.5rem 0; cursor: pointer; background: none; border: none;">Logout</button>
                        </form>
                    </li>
                }
            </ul>
        </div>
    </nav>
</header>

<style>
    header .navbar-dark .nav-link:hover {
        color: var(--cor-cta) !important;
        transition: color 0.2s;
    }
    
    header .navbar-dark .navbar-brand:hover {
        color: var(--cor-cta) !important;
    }
</style>

